<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_root"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_white_10"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_marginTop="29dp"
            android:src="@mipmap/icon_out_scene_clear" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="垃圾清理"
            android:textColor="#FF5F5F"
            android:textSize="16sp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="注意：手机存在大量垃圾，严重\n影响手机内存，点击立即优化"
            android:textColor="#2C2E31"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/tvBtnGo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_out_scene_btn_style1"
                android:gravity="center"
                android:text="立即优化"
                android:textColor="#FFF"
                android:textSize="16sp" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="button_ripple/data.json"
                app:lottie_loop="true" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameAdLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_10"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_below="@+id/ll_content"/>
</RelativeLayout>